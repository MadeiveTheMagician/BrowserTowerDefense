@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to THE GAME</h1>
    <canvas id="GameField" class="BackgroundStyle"></canvas>
</div>

<style>
    .BackgroundStyle {
        width: 100%;
        max-width: 1500px;
        height: 1000px;
        background-image: url("/Resources/Sprites/Backgrounds/BaseField.png");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: top;
        position: relative;
        overflow: hidden;
    }

    canvas {
        border: 2px solid black;
        background-color: transparent;
    }
</style>

<script>
    const canvas = document.getElementById("GameField");
    if (canvas instanceof HTMLCanvasElement) {
        console.log("✅ Это HTMLCanvasElement (Гыгы, прикольно)");
    } else {
        console.log("❌ Не HTMLCanvasElement (Блин, не прикольно)");
    }
</script>
